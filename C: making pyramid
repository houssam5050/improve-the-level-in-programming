#include <stdio.h>

int main() {
    int rows = 5;

    for(int x = 1; x <= rows; x++){
            for(int y = x; y < rows; y++){

                    printf("  ");
            }

            for(int z = 1; z <=(2 * x - 1); z++){
                    printf("* ");
            }


            printf("\n");
    }


    return 0;
}
